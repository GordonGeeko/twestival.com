{{> HTMLTag }}
	<head>
		{{> HeadContent }}
		{{> Blog/HeadContent }}
		<title>Twestival {{CurrentYear}}: {{#Event}}{{Name}}{{/Event}}</title>
	</head>
	<body id="blog">
		{{> Header }}
		{{> Blog/Header}}
		
		{{> Blog/Event }}
		
		<div class="wrapper content">
			<div id="blog-posts">
				{{#BlogPost}}
					<div class="clearfix"></div>
					<div class="post" id="post-{{PostID}}">
						{{#security.currentBlogEventAdmin}}
							<a href="{{BlogPostUri}}" class="edit">Edit</a>
						{{/security.currentBlogEventAdmin}}
						<a href="{{BlogPostPermalinkUri}}" class="subject">{{Title}}</a>
					
						<div class="date">April 5th, 2011</div>
						
						<!-- TODO: Implement comments -->
						<a href="comment" class="comment-link">Comment</a>
					
						<div class="body">
							{{{Content}}}
						</div>
						
						<div class="social-media-share">
							<a class="share share-facebook" href="http://www.facebook.com/sharer.php?u={{#format.toUrlQuery}}{{BlogPostShareUri}}{{/format.toUrlQuery}}">
								<span class="accessible-text">Facebook Share Count: </span>
								<span class="count" id="share-facebook-count-{{PostID}}"></span>
							</a>
							<a class="share share-twitter" href="http://twitter.com/share?text={{#format.toUrlQuery}}{{BlogPostShareUri}}{{/format.toUrlQuery}}">
								<span class="accessible-text">Twitter Share Count: </span>
								<span class="count" id="share-twitter-count-{{PostID}}"></span>
							</a>
							<a class="share share-googleplus" href="https://plus.google.com/share?url={{#format.toUrlQuery}}{{BlogPostShareUri}}{{/format.toUrlQuery}}">
								<span class="accessible-text">Google+ Share Count: </span>
								<span class="count" id="share-googleplus-count-{{PostID}}"></span>
							</a>
							<a class="share share-email" href="mailto:?subject={{#format.toUrlQuery}}{{Title}}{{/format.toUrlQuery}}&body={{#format.toUrlQuery}}{{BlogPostShareUri}}{{/format.toUrlQuery}}">
								<span class="accessible-text">Email Link</span>
								<span class="count" id="share-email-count-{{PostID}}"></span>
							</a>
							<script type="text/javascript">
								loadSocialMediaCounts({{PostID}}, '{{BlogPostShareUri}}');
							</script>
						</div>
						
						<div id="disqus_thread"></div>
						<script type="text/javascript">
							/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
							var disqus_shortname = 'twestival2011'; // required: replace example with your forum shortname
							
							// The following are highly recommended additional parameters. Remove the slashes in front to use.
							var disqus_identifier = 'twestival_{{PostID}}';
							// var disqus_url = 'http://example.com/permalink-to-page.html';
							
							/* * * DON'T EDIT BELOW THIS LINE * * */
							(function() {
							    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
							    dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
							    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
							})();
						</script>
						<noscript>
							Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
						</noscript>
					</div>
				{{/BlogPost}}
				<div class="clearfix"></div>

			</div>
			<div id="sidebars">
				{{> Sidebar/EventTwitter }}
				{{> Sidebar/EventSponsors }}
				{{> Sidebar/EventTeamMembers }}
				{{> Sidebar/GlobalTumblr }}
			</div>
		</div>

		{{> Footer }}
	</body>
</html>