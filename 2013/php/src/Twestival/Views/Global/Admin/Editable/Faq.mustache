{{> HTMLTag }}
	<head>
		{{> HeadContent }}
		<title>Twestival {{CurrentYear}} FAQs</title>
		
		<link rel="stylesheet" href="css/faq.css" />
		<link rel="stylesheet" href="css/admin.css" />
		
		<!-- Twitter -->
		<script type="text/javascript" src="//widgets.twimg.com/j/2/widget.js"></script>
		<link href="//widgets.twimg.com/j/2/widget.css" type="text/css" rel="stylesheet"/>
		
		<!-- CKEditor -->
		<script src="ckeditor/ckeditor.js"></script>
	</head>
	<body id="faq">
		{{> Header }}
		
		<div class="wrapper">
			<h1><a href="admin">Site Admin</a>: Frequently Asked Questions</h1>
			
			<div class="faqs">
				<form method="POST" class="editable">
					<textarea id="edit-content" name="Content" class="body">
						{{PageContent.HTML}}
					</textarea>
					<script type="text/javascript">
						CKEDITOR.replace('edit-content', {
								contentsCss: [
										'//fonts.googleapis.com/css?family=Lato',
										'css/main.css',
										'ckeditor/contents.css',
										'css/faq.css',
										'css/admin.css'
								],
								height: 350,
								bodyClass: 'faqs',
								format_tags: 'h2;p'
						});
					</script>
					<input type="submit" class="action" value="Save"/>
					<input type="button" class="action" value="Cancel" onclick="history.go(-1);"/>
				</form>
			</div>
			
			<div id="sidebars">
				{{>Sidebar/GlobalTumblr}}
				{{>Sidebar/GlobalTwitter}}
				{{>Sidebar/GlobalInstagram}}
			</div>
			
			<div class="clearfix"></div>
		</div>

		{{> Footer }}
	</body>
</html>