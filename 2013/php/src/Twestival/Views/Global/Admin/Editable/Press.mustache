{{> HTMLTag }}
	<head>
		{{> HeadContent }}
		<title>Twestival {{CurrentYear}} Press</title>
		
		<link rel="stylesheet" href="css/press.css" />
		<link rel="stylesheet" href="css/admin.css" />
		
		<!-- CKEditor -->
		<script src="ckeditor/ckeditor.js"></script>
	</head>
	<body id="press">
		{{> Header }}
		
		<div class="wrapper">
			<h1>Press</h1>
			
			<div class="coverage">
				<form method="POST" class="editable">
					<textarea id="edit-content" name="Content" class="body">
						{{PageContent.HTML}}
					</textarea>
					<script type="text/javascript">
						CKEDITOR.replace('edit-content', {
								contentsCss: [
										'//fonts.googleapis.com/css?family=Lato',
										'css/main.css',
										'ckeditor/contents.css',
										'css/faq.css',
										'css/admin.css'
								],
								height: 350,
								bodyClass: 'coverage',
								format_tags: 'h2;p'
						});
					</script>
					<input type="submit" class="action" value="Save"/>
					<input type="button" class="action" value="Cancel" onclick="history.go(-1);"/>
				</form>
			</div>
		
			<div id="sidebars">
				{{> Sidebar/GlobalPressDownload }}
				{{> Sidebar/GlobalPressContact }}
			</div>
			
			<div class="clearfix"></div>
		</div>

		{{> Footer }}
	</body>
</html>