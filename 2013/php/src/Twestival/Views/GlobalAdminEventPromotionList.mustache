{{> HTMLTag }}
	<head>
		{{> HeadContent }}
		<title>Twestival {{CurrentYear}} Admin</title>
		
		<link rel="stylesheet" href="css/input-form.css" />
		<link rel="stylesheet" href="css/admin.css" />
	</head>
	<body id="admin">
		{{> Header }}
		
		<div class="wrapper">
			<h1>
				<a href="admin">Site Admin</a>:
				Event Promotions:
				<a href="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}">
					{{#format.toTitleCase}}{{PageName}}{{/format.toTitleCase}}:
					{{#format.toTitleCase}}{{SectionName}}{{/format.toTitleCase}}
				</a>
			</h1>
			
			<table class="managed-list">
				{{#EventPromotions}}
					<tr>
						<td>
							{{^First}}
								<form action="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}/{{Sequence}}" method="POST" class="rest-link">
									<input type="hidden" name="Operation" value="↑"/>
									<input type="submit" value="↑"/>
								</form>
							{{/First}}
						</td>
						<td>
							{{^Last}}
								<form action="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}/{{Sequence}}" method="POST" class="rest-link">
									<input type="hidden" name="Operation" value="↓"/>
									<input type="submit" value="↓"/>
								</form>
							{{/Last}}
						</td>
						<th>
							{{#Name}}
								<a href="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}/{{Sequence}}">
									{{#Name}}{{Name}}{{/Name}}
								</a>
							{{/Name}}
						</th>
						<td>
							{{#Name}}
								<form action="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}/{{Sequence}}!DELETE" method="POST" class="rest-link">
									<input type="submit" value="⊠"/>
								</form>
							{{/Name}}
							{{^Name}}
								<a href="admin/event-promotions/{{#format.toLowerCase}}{{PageName}}{{/format.toLowerCase}}/{{#format.toLowerCase}}{{SectionName}}{{/format.toLowerCase}}/{{Sequence}}">
									{{^Name}}⊞{{/Name}}
								</a>
							{{/Name}}
						</td>
					</tr>
				{{/EventPromotions}}
			</table>
		</div>
		
		{{> Footer }}
	</body>
</html>